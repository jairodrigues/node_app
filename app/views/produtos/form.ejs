<html>
    <body>
        <div>
            <% if(errosValidacao) { %> 
                <ul>
                    <% for (var i=0; i< errosValidacao.length; i++){ %>
                        <li>
                            <%= errosValidacao[i].param %> - <%= errosValidacao[i].msg %>
                        </li>
                    <% } %>
                </ul>
            <% } %>
        </div>
        <form action="/produtos" method="post"> 
            <div>
                <label for ="titulo">Titulo</label>    
                <input type="text" name="titulo" placeholder="Titulo" value="<%= produto.titulo %>"/>
            </div> 
            <div>
                <label for ="preco">Preço</label>    
                <input type="text" name="preco" placeholder="preco" value="<%= produto.preco %>"/>
            </div> 
            <div>
                <label for ="descricao">Descrição</label>    
                <textarea cols="10" rows="10" name="descricao" placeholder="Descrição"><%= produto.descricao %></textarea>
            </div>        

            <input type="submit" value="gravar"/>
        </form>
    </body>
</html>    